<div class="section">
	<h3>Schools<%= link_to '+', schools_new_path, class:"custome-add btn-floating btn-large waves-effect waves-light red right" %></h3>
</div>

<div class="section-2">
<% @schools.each do |school| %>
<div class="card-panel">
 <div class="row">
      <div class="col s3"><span class="black-text text-darken-2 col s3"> <strong class="index-strong"><%= school.school_name %></strong></span></div>
      <div class="col s3"><span class="black-text text-darken-2 col s3"> <h5><%= school.city%></h5></div>
      <div class="col s3"><span class="black-text text-darken-2 col s3"> <h5><%= school.state %></h5></div>
      <div class="col s2"><span class="black-text text-darken-2 col s3"> <h5><%= school.pin_code %></h5></div>
      <div class="col s1"><span class="black-text text-darken-2 col s3"> <h5><%= link_to '>', school_edit_path(school), class:"arrow-link" %> </h5></div>
    </div>  
</div>
<% end %>
</div>