
 <h4><%= link_to '<', school_index_path, class:"custome-btn btn-floating btn-large waves-effect waves-light red" %> School Edit Details</h4>


<%= form_for :schools, :url => school_update_path, method: :put do |f| %>
<div class="section">
<div class="left-section">
<div class="row s10">
<div class="input-field col s10">
<%= f.text_field :school_name, class:"validate", required: true, :value => @school.school_name %>
</div>
</div>

<div class="row s10">
<div class="input-field col s10">
<%= f.text_area :address, class:"materialize-textarea", required: true, :value => @school.address %>
</div>
</div>

<div class="col-city">
<div class="row s10">
<div class="input-field col s10">
<%= f.text_field :city, class:"validate", required: true, :value => @school.city %>
</div>
</div>

<div class="row s10">
<div class="input-field col s10">
<%= f.text_field :state, id:"state", class:"validate", required: true, :value => @school.state %>
</div>
</div>

<div class="row s10">
<div class="input-field col s10">
<%= f.number_field :pin_code, class:"validate", required: true, :value => @school.pin_code %>
</div>
</div>
</div>
</div>
<div class="right-section">
<div class="row s10">
<div class="input-field col s10">
<h5>AFFILIATED BOARD</h5>
<br/>
<p>
<%= f.radio_button :affiliated_board, 'CBSE', id:"test1", :value => @school.affiliated_board %><label for="test1"><span class="aff-radio">CBSE</span></label>

<%= f.radio_button :affiliated_board, 'ICSE', id:"test2", :value => @school.affiliated_board %><label for="test2"><span class="aff-radio">ICSE</span></label>

<%= f.radio_button :affiliated_board, 'MATRIC', id:"test3", :value => @school.affiliated_board %><label for="test3"><span class="aff-radio">MATRIC</span></label><br/>
<br/><br/>
<%= f.radio_button :affiliated_board, 'STATE BOARD', id:"test4", :value => @school.affiliated_board %><label for="test4"><span class="aff-radio">STATE BOARD</span></label>
</p>
<%= f.submit 'Update', class:"waves-effect waves-light btn submit-button" %>
</div>
</div>
</div>
</div>
 <% end %>